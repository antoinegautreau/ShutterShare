        android:background="@color/white"
        android:elevation="2dp"
        android:visibility="visible"
        app:itemIconSize="30dp"
        app:menu="@menu/bottom_menu"
        tools:visibility="visible"
        app:labelVisibilityMode="unlabeled"
        />
